{% extends "base.html.jinja2" %}
{% block head %}
    {{ super() }}
    <script type="text/javascript"
            src="{{ url_for(".static", filename='locate.js') }}"></script>
    <link rel="stylesheet"
          href="{{ url_for(".static", filename='locate.css') }}">
{% endblock %}
{% block body %}
    <div class="govuk-!-padding-top-4 govuk-!-padding-bottom-5">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <form id="form" action="{{ url_for(".locate", type=type, token=token) }}"
                          method="post">
                        {{ form.hidden_tag() }}
                        {{ form.token(style="display: none") }}
                        {% if type == "a" or type == "b" %}
                            <div id="address-part">
                                <h2 class="govuk-heading-l">Adresa domácej izolácie</h2>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="street">
                                        Ulica
                                    </label>
                                    <span class="govuk-error-message" style="display: none">
                                      <span class="govuk-visually-hidden">Error:</span> Ulica je povinná.
                                      </span>
                                    {{ form.street(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="street_number">
                                        Súpisné číslo
                                    </label>
                                    <span class="govuk-error-message" style="display: none">
                                      <span class="govuk-visually-hidden">Error:</span> Súpisne číslo je povinné.
                                      </span>
                                    {{ form.street_number(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="city">
                                        Mesto
                                    </label>
                                    <span class="govuk-error-message" style="display: none">
                                      <span class="govuk-visually-hidden">Error:</span> Mesto je povinné.
                                      </span>
                                    {{ form.city(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="zip">
                                        PSČ
                                    </label>
                                    <span class="govuk-error-message" style="display: none">
                                      <span class="govuk-visually-hidden">Error:</span> PSČ je povinné.
                                      </span>
                                    {{ form.zip(class_="govuk-input") }}
                                </div>
                                {% if type == "b" %}
                                    <p class="govuk-body">Po potvrdení adresy tlačidlom nižšie bude
                                        spustené spresnenie polohy.</p>
                                {% endif %}
                                {% if type == "a" or type == "b" %}
                                    <button class="govuk-button" id="address-submit">
                                        Potvrdiť adresu
                                    </button>
                                {% endif %}
                            </div>
                        {% endif %}
                        {% if type == "p" or type == "b" %}
                            <div id="place-part"
                                 {% if type == "b" %}style="display: none"{% endif %}>
                                <div>
                                    <h2 class="govuk-heading-l" id="place-head">1. Povoľte zdieľanie polohy</h2>
                                    <p class="govuk-body">Po stlačení tlačidla nižšie vás prehliadač
                                        vyzve, aby ste povolili zdieľanie polohy. Potvrďte zdieľanie
                                        polohy.</p>
                                    <p class="govuk-body unsupported" style="display: none;"><i
                                            class="fas fa-exclamation-circle"></i> Váš prehliadač
                                        nepodporuje získanie polohy.</p>
                                    <p class="govuk-body denied" style="display: none;"><i
                                            class="fas fa-exclamation-triangle"></i> Získanie polohy
                                        nebolo povolené.</p>
                                    <p class="govuk-body unavailable" style="display: none;"><i
                                            class="fas fa-exclamation-triangle"></i> Polohu sa
                                        nepodarilo získať. Zapnite získanie polohy v nastaveniach.
                                    </p>
                                    <p class="govuk-body available" style="display: none;"><i
                                            class="fas fa-check-circle"></i> Poloha bola úspešne
                                        získaná.</p>
                                    <button class="govuk-button" id="place-try">Skúsiť</button>
                                </div>
                                <div>
                                    <h2 class="govuk-heading-l">2. Počkajte na získanie presnej
                                        polohy</h2>
                                    <p class="govuk-body">Pokúšame sa získať čo najpresnejší údaj o
                                        Vašej polohe. Akonáhle bude vaša poloha overená s presnosťou
                                        aspoň 150 m,
                                        budete ju môcť potvrdiť stlačením tlačidla Potvrdiť
                                        miesto.</p>

                                    <div id="place-accuracy" style="text-align: center;"
                                         class="govuk-!-padding-top-2 govuk-!-padding-bottom-4">
                                        <h3 class="govuk-heading-m">Presnosť <i
                                                class="fas fa-spinner fa-pulse spinner"
                                                style="display: none"></i></h3>
                                        <span style="font-size: 2em; font-family:Source Sans Pro,Arial,sans-serif;">Neznáma</span>
                                    </div>
                                </div>
                                {{ form.lat(style="display: none") }}
                                {{ form.lng(style="display: none") }}
                                {% if type == "p" or type == "b" %}
                                    <button class="govuk-button" id="place-submit" disabled>
                                        Potvrdiť miesto
                                    </button>
                                {% endif %}
                            </div>
                        {% endif %}
                    </form>
                    <script>
                        let type = "{{ type }}";
                        $("#address-submit").click(address_submit);
                        $("#place-try").click(place_try);
                        $("#place-submit").click(place_submit);
                    </script>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
