{% extends "base.html.jinja2" %}
{% block head %}
    {{ super() }}
    <script type="text/javascript"
            src="{{ url_for(".static", filename='locate.js') }}"></script>
    <link rel="stylesheet"
          href="{{ url_for(".static", filename='locate.css') }}">
{% endblock %}
{% block body %}
    <div class="govuk-!-padding-top-4 govuk-!-padding-bottom-5">
        <div class="govuk-width-container">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <form id="form" action="{{ url_for(".locate", type=type, token=token) }}"
                          method="post">
                        {{ form.hidden_tag() }}
                        {{ form.token(style="display: none") }}
                        {% if type == "a" or type == "b" %}
                            <div id="address-part">
                                <h2 class="govuk-heading-l">Adresa domácej izolácie</h2>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="input-example">
                                        Ulica
                                    </label>
                                    {{ form.street(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="input-example">
                                        Číslo
                                    </label>
                                    {{ form.street_number(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="input-example">
                                        Mesto
                                    </label>
                                    {{ form.city(class_="govuk-input") }}
                                </div>
                                <div class="govuk-form-group">
                                    <label class="govuk-label" for="input-example">
                                        PSČ
                                    </label>
                                    {{ form.zip(class_="govuk-input") }}
                                </div>
                                {% if type == "a" or type == "b" %}
                                    <button class="govuk-button" id="address-submit">
                                        Potvrdiť
                                    </button>
                                {% endif %}
                            </div>
                        {% endif %}
                        {% if type == "p" or type == "b" %}
                            <div id="place-part"
                                 {% if type == "b" %}style="display: none"{% endif %}>
                                <div>
                                    <h2 class="govuk-heading-l">1. Povoľte zdieľanie polohy</h2>
                                    <p class="govuk-body">Po stlačení tlačidla nižšie vás prehliadač vyzve na povolenie zdieľana polohy.
                                        Potvrdte zdieľanie polohy aby sme vás mohli zamerať.</p>
                                    <p class="govuk-body unsupported" style="display: none;"><i class="fas fa-exclamation-circle"></i> Váš prehliadač nepodporuje získanie polohy.</p>
                                    <p class="govuk-body denied" style="display: none;"><i class="fas fa-exclamation-triangle"></i> Získanie polohy nebolo povolené.</p>
                                    <p class="govuk-body unavailable" style="display: none;"><i class="fas fa-exclamation-triangle"></i> Polohu sa nepodarilo získať.</p>
                                    <p class="govuk-body available" style="display: none;"><i class="fas fa-check-circle"></i> Poloha bola úspešne získaná.</p>
                                    <button class="govuk-button" id="place-try">Skúsiť</button>
                                </div>
                                <div>
                                    <h2 class="govuk-heading-l">2. Počkajte na získanie presnej
                                        polohy</h2>
                                    <p class="govuk-body">Váš prehliadač sa pokúsi získať čo najpresnejší údaj o vašej polohe.
                                        Akonáhle bude vaša poloha zistená s presnosťou aspoň 150 metrov, budete ju môcť odoslať.</p>

                                    <div id="place-accuracy" style="text-align: center;" class="govuk-!-padding-top-2 govuk-!-padding-bottom-4">
                                        <h3 class="govuk-heading-m">Presnosť</h3>
                                        <span style="font-size: 2em; font-family:Source Sans Pro,Arial,sans-serif;">Neznáma</span>
                                    </div>
                                </div>
                                {{ form.lat(style="display: none") }}
                                {{ form.lng(style="display: none") }}
                                {% if type == "p" or type == "b" %}
                                    <button class="govuk-button" id="place-submit" disabled>
                                        Potvrdiť
                                    </button>
                                {% endif %}
                            </div>
                        {% endif %}
                    </form>
                    <script>
                        let type = "{{ type }}";
                        $("#address-submit").click(address_submit);
                        $("#place-try").click(place_try);
                        $("#place-submit").click(place_submit);
                    </script>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
